"""
Environment configuration for AI Fault Localization Tool
Copy this file to .env and update values as needed
"""

# Backend Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000

# Database Configuration
DATABASE_URL=sqlite:///./fault_localization.db
# For PostgreSQL: postgresql://user:password@localhost/dbname

# AI Model Configuration
MODEL_DEVICE=cpu  # Options: cpu, cuda
CODEBERT_MODEL=microsoft/codebert-base
MAX_EMBEDDING_CACHE_SIZE=10000

# Feature Extraction
DEFAULT_MAX_CANDIDATES=100
GIT_LOOKBACK_DAYS=30

# API Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:3001"]
API_TITLE=AI Fault Localization API
API_VERSION=1.0.0

# Logging
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR
LOG_FILE=fault_localization.log

# Performance
ENABLE_EMBEDDING_CACHE=True
BATCH_SIZE=16
MAX_CODE_LENGTH=512
